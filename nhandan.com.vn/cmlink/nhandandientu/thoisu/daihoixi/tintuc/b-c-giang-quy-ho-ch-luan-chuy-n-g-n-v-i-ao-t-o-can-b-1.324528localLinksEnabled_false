function renderCaptcha279267() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-279267");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-279267');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-279267" />');
        jQuery("#captcha_image-279267").click(renderCaptcha279267);
    }
}

