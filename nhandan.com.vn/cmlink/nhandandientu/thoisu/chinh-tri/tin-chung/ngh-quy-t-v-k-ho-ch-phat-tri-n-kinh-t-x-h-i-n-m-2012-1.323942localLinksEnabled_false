function renderCaptcha278552() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-278552");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-278552');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-278552" />');
        jQuery("#captcha_image-278552").click(renderCaptcha278552);
    }
}

