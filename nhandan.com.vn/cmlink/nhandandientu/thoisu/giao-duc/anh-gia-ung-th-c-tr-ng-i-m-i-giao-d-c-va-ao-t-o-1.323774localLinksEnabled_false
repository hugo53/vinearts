		      }
    };

function renderCaptcha278342() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-278342");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-278342');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-278342" />');
        jQuery("#captcha_image-278342").click(renderCaptcha278342);
    }
}

jQuery().ready(function() { 
            
    
