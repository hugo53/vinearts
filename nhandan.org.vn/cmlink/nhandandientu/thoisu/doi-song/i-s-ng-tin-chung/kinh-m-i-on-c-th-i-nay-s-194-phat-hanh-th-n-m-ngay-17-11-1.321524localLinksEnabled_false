function renderCaptcha275724() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-275724");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-275724');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-275724" />');
        jQuery("#captcha_image-275724").click(renderCaptcha275724);
    }
}

