function renderCaptcha277127() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-277127");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-277127');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-277127" />');
        jQuery("#captcha_image-277127").click(renderCaptcha277127);
    }
}

