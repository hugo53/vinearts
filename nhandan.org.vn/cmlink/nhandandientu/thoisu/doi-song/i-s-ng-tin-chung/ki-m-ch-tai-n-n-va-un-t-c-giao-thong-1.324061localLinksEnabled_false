function renderCaptcha278692() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-278692");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-278692');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-278692" />');
        jQuery("#captcha_image-278692").click(renderCaptcha278692);
    }
}

