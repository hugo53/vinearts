function renderCaptcha273747() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-273747");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-273747');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-273747" />');
        jQuery("#captcha_image-273747").click(renderCaptcha273747);
    }
}

