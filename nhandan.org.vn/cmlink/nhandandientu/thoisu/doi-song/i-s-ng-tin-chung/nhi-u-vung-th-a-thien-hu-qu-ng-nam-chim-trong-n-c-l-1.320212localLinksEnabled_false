function renderCaptcha274190() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-274190");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-274190');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-274190" />');
        jQuery("#captcha_image-274190").click(renderCaptcha274190);
    }
}

jQuery().ready(function() { 
            
    
