        },
		        comment_email: {
          required: "Bạn chưa nhập email hoặc email không đúng. Xin hãy nhập lại.",
          email: "Bạn chưa nhập email hoặc email không đúng. Xin hãy nhập lại."
        },
        captcha_title: {
          required: "Xin hãy nhập Tiêu đề."
        }
      },
      submitHandler: function(form) {
        jQuery("#submitCommentBlogPost-278958").css("background-color", "#ccc");
        jQuery("#submitCommentBlogPost-278958").attr("disabled", true);
        
        form.submit();
        		alert("Cảm ơn Quý vị đã đóng góp ý kiến về bài viết, chúng tôi đã nhận được ý kiến của Quý vị");
		      }
    };

function renderCaptcha278958() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-278958");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-278958');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-278958" />');
        jQuery("#captcha_image-278958").click(renderCaptcha278958);
    }
}

jQuery().ready(function() { 
            
    
    //jQuery("#captcha_container-278958").click(renderCaptcha278958);
    
    jQuery("#comment_this_article-278958").click(function() {
        firstTimeCaptcha278958();
        jQuery("#comments_container-278958").slideToggle("fast");
        jQuery("#comment_author-278958").focus();
    });
    
});

  jQuery().ready(function() {
    /* "Error management" */  
    var validator = jQuery("#commentBlogPostForm-278958").validate(validation);
  });
  
</script>
