function renderCaptcha279195() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-279195");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-279195');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-279195" />');
        jQuery("#captcha_image-279195").click(renderCaptcha279195);
    }
}

jQuery().ready(function() { 
            
    
