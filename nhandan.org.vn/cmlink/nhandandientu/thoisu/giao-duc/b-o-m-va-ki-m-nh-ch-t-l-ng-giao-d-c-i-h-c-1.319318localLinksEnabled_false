		      }
    };

function renderCaptcha273178() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-273178");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-273178');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-273178" />');
        jQuery("#captcha_image-273178").click(renderCaptcha273178);
    }
}

jQuery().ready(function() { 
            
    
