function sendMail(){
$j('.sendMail').sendMail("/cmlink/mail-configuration-17.123?sendMail=init&title=Hà Nội sẽ chuyển mạnh sau quy hoạch&url=http://nhandan.org.vn/cmlink/nhandandientu/thoisu/daihoixi/ch-t-ch-h-chi-minh-ban-v-ng/ha-n-i-s-chuy-n-m-nh-sau-quy-ho-ch-1.322631&locale=vi_VN");
