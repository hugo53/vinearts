function renderCaptcha277015() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-277015");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-277015');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-277015" />');
        jQuery("#captcha_image-277015").click(renderCaptcha277015);
    }
}

