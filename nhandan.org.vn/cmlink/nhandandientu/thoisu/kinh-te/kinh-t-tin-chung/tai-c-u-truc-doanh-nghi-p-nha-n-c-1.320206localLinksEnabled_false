function renderCaptcha274184() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-274184");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-274184');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-274184" />');
        jQuery("#captcha_image-274184").click(renderCaptcha274184);
    }
}

