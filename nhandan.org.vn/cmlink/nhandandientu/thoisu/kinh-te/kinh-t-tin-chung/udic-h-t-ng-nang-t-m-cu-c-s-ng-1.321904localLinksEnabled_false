    //jQuery("#captcha_container-276127").click(renderCaptcha276127);
    
    jQuery("#comment_this_article-276127").click(function() {
        firstTimeCaptcha276127();
        jQuery("#comments_container-276127").slideToggle("fast");
        jQuery("#comment_author-276127").focus();
    });
    
});

