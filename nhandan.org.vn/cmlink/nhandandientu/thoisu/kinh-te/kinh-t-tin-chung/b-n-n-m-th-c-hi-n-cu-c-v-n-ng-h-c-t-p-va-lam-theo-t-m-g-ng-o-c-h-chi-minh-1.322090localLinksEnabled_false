          required: "Mã xác thực không đúng. Xin hãy nhập lại."
        },
		        comment_email: {
          required: "Bạn chưa nhập email hoặc email không đúng. Xin hãy nhập lại.",
          email: "Bạn chưa nhập email hoặc email không đúng. Xin hãy nhập lại."
        },
        captcha_title: {
          required: "Xin hãy nhập Tiêu đề."
        }
      },
      submitHandler: function(form) {
        jQuery("#submitCommentBlogPost-276355").css("background-color", "#ccc");
        jQuery("#submitCommentBlogPost-276355").attr("disabled", true);
        
        form.submit();
        		alert("Cảm ơn Quý vị đã đóng góp ý kiến về bài viết, chúng tôi đã nhận được ý kiến của Quý vị");
		      }
    };

function renderCaptcha276355() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-276355");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-276355');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-276355" />');
        jQuery("#captcha_image-276355").click(renderCaptcha276355);
    }
}

jQuery().ready(function() { 
            
    
    //jQuery("#captcha_container-276355").click(renderCaptcha276355);
    
    jQuery("#comment_this_article-276355").click(function() {
        firstTimeCaptcha276355();
        jQuery("#comments_container-276355").slideToggle("fast");
        jQuery("#comment_author-276355").focus();
    });
    
});

