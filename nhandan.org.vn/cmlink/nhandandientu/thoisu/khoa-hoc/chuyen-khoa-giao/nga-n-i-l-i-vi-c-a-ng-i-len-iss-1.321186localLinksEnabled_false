function renderCaptcha275292() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-275292");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-275292');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-275292" />');
        jQuery("#captcha_image-275292").click(renderCaptcha275292);
    }
}

