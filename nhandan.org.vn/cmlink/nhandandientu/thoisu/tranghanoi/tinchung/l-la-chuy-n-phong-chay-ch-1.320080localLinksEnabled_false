<script type="text/javascript">

    var validation = {
      rules: {
        comment_text: {
          required: true
        },
        comment_author: {
          required: true
        },
		        comment_email: {
		        required: true,
		        email:true
		        },
		        comment_title: {
		        required: true
		        },
		        captcha_response: {
          required: true
        }
      },
      messages: {
        comment_text: {
          required: "Xin hãy nhập Ý kiến."
        },
        comment_author: {
          required: "Xin hãy nhập Họ và tên."
        },
        comment_title: {
          required: "Xin hãy nhập Tiêu đề."
        },
        captcha_response: {
          required: "Mã xác thực không đúng. Xin hãy nhập lại."
        },
		        comment_email: {
          required: "Bạn chưa nhập email hoặc email không đúng. Xin hãy nhập lại.",
          email: "Bạn chưa nhập email hoặc email không đúng. Xin hãy nhập lại."
        },
        captcha_title: {
          required: "Xin hãy nhập Tiêu đề."
        }
      },
      submitHandler: function(form) {
        jQuery("#submitCommentBlogPost-274064").css("background-color", "#ccc");
        jQuery("#submitCommentBlogPost-274064").attr("disabled", true);
        
        form.submit();
        		alert("Cảm ơn Quý vị đã đóng góp ý kiến về bài viết, chúng tôi đã nhận được ý kiến của Quý vị");
		      }
    };

function renderCaptcha274064() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-274064");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-274064');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-274064" />');
        jQuery("#captcha_image-274064").click(renderCaptcha274064);
    }
}

jQuery().ready(function() { 
            
    
    //jQuery("#captcha_container-274064").click(renderCaptcha274064);
    
    jQuery("#comment_this_article-274064").click(function() {
        firstTimeCaptcha274064();
        jQuery("#comments_container-274064").slideToggle("fast");
        jQuery("#comment_author-274064").focus();
    });
    
});

  jQuery().ready(function() {
    /* "Error management" */  
    var validator = jQuery("#commentBlogPostForm-274064").validate(validation);
  });
  
</script>
