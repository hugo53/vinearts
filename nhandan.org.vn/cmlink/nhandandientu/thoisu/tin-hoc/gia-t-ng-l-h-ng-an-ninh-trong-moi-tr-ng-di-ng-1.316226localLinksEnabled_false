		      }
    };

function renderCaptcha269703() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-269703");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-269703');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-269703" />');
        jQuery("#captcha_image-269703").click(renderCaptcha269703);
    }
}

jQuery().ready(function() { 
            
    
    //jQuery("#captcha_container-269703").click(renderCaptcha269703);
    
    jQuery("#comment_this_article-269703").click(function() {
        firstTimeCaptcha269703();
        jQuery("#comments_container-269703").slideToggle("fast");
        jQuery("#comment_author-269703").focus();
    });
    
});

