		      }
    };

function renderCaptcha271411() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-271411");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-271411');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-271411" />');
        jQuery("#captcha_image-271411").click(renderCaptcha271411);
    }
}

jQuery().ready(function() { 
            
    
    //jQuery("#captcha_container-271411").click(renderCaptcha271411);
    
    jQuery("#comment_this_article-271411").click(function() {
        firstTimeCaptcha271411();
        jQuery("#comments_container-271411").slideToggle("fast");
        jQuery("#comment_author-271411").focus();
    });
    
});

  jQuery().ready(function() {
    /* "Error management" */  
    var validator = jQuery("#commentBlogPostForm-271411").validate(validation);
  });
  
</script>
