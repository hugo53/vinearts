function renderCaptcha269681() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-269681");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-269681');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-269681" />');
        jQuery("#captcha_image-269681").click(renderCaptcha269681);
    }
}

