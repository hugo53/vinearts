function renderCaptcha278504() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-278504");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-278504');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-278504" />');
        jQuery("#captcha_image-278504").click(renderCaptcha278504);
    }
}

