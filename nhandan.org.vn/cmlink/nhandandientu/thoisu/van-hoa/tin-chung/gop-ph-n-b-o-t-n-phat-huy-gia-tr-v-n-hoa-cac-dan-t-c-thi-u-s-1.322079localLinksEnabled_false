function renderCaptcha276341() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-276341");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-276341');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-276341" />');
        jQuery("#captcha_image-276341").click(renderCaptcha276341);
    }
}

