function renderCaptcha274238() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-274238");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-274238');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-274238" />');
        jQuery("#captcha_image-274238").click(renderCaptcha274238);
    }
}

jQuery().ready(function() { 
            
    
    //jQuery("#captcha_container-274238").click(renderCaptcha274238);
    
