		      }
    };

function renderCaptcha275078() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-275078");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-275078');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-275078" />');
        jQuery("#captcha_image-275078").click(renderCaptcha275078);
    }
}

jQuery().ready(function() { 
            
    
    //jQuery("#captcha_container-275078").click(renderCaptcha275078);
    
