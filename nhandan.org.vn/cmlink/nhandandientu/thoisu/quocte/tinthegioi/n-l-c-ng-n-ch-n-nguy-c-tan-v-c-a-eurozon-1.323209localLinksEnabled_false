function sendMail(){
$j('.sendMail').sendMail("/cmlink/mail-configuration-17.123?sendMail=init&title=Nỗ lực ngăn chặn nguy cơ tan vỡ của Eurozon&url=http://nhandan.org.vn/cmlink/nhandandientu/thoisu/quocte/tinthegioi/n-l-c-ng-n-ch-n-nguy-c-tan-v-c-a-eurozon-1.323209&locale=vi_VN");
