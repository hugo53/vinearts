		      }
    };

function renderCaptcha275900() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-275900");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-275900');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-275900" />');
        jQuery("#captcha_image-275900").click(renderCaptcha275900);
    }
}

jQuery().ready(function() { 
            
    
    //jQuery("#captcha_container-275900").click(renderCaptcha275900);
    
    jQuery("#comment_this_article-275900").click(function() {
        firstTimeCaptcha275900();
        jQuery("#comments_container-275900").slideToggle("fast");
        jQuery("#comment_author-275900").focus();
    });
    
});

  jQuery().ready(function() {
    /* "Error management" */  
    var validator = jQuery("#commentBlogPostForm-275900").validate(validation);
  });
  
