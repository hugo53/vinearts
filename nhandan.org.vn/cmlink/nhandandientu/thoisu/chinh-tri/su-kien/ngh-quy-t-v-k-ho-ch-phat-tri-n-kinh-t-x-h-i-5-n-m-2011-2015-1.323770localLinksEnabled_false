function renderCaptcha278336() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-278336");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-278336');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-278336" />');
        jQuery("#captcha_image-278336").click(renderCaptcha278336);
    }
}

