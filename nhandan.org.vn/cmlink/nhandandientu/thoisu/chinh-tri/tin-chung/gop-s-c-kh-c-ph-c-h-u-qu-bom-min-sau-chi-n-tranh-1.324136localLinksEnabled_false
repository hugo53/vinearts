function renderCaptcha278792() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-278792");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-278792');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-278792" />');
        jQuery("#captcha_image-278792").click(renderCaptcha278792);
    }
}

