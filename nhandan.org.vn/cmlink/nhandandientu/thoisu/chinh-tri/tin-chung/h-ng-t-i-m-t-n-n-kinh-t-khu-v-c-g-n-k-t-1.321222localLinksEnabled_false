          required: "Mã xác thực không đúng. Xin hãy nhập lại."
        },
		        comment_email: {
          required: "Bạn chưa nhập email hoặc email không đúng. Xin hãy nhập lại.",
          email: "Bạn chưa nhập email hoặc email không đúng. Xin hãy nhập lại."
        },
        captcha_title: {
          required: "Xin hãy nhập Tiêu đề."
        }
      },
      submitHandler: function(form) {
        jQuery("#submitCommentBlogPost-275338").css("background-color", "#ccc");
        jQuery("#submitCommentBlogPost-275338").attr("disabled", true);
        
        form.submit();
        		alert("Cảm ơn Quý vị đã đóng góp ý kiến về bài viết, chúng tôi đã nhận được ý kiến của Quý vị");
		      }
    };

function renderCaptcha275338() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-275338");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-275338');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-275338" />');
        jQuery("#captcha_image-275338").click(renderCaptcha275338);
    }
}

jQuery().ready(function() { 
            
    
    //jQuery("#captcha_container-275338").click(renderCaptcha275338);
    
    jQuery("#comment_this_article-275338").click(function() {
        firstTimeCaptcha275338();
        jQuery("#comments_container-275338").slideToggle("fast");
        jQuery("#comment_author-275338").focus();
    });
    
});

