		      }
    };

function renderCaptcha277053() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-277053");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-277053');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-277053" />');
        jQuery("#captcha_image-277053").click(renderCaptcha277053);
    }
}

jQuery().ready(function() { 
            
    
    //jQuery("#captcha_container-277053").click(renderCaptcha277053);
    
    jQuery("#comment_this_article-277053").click(function() {
        firstTimeCaptcha277053();
        jQuery("#comments_container-277053").slideToggle("fast");
        jQuery("#comment_author-277053").focus();
    });
    
});

