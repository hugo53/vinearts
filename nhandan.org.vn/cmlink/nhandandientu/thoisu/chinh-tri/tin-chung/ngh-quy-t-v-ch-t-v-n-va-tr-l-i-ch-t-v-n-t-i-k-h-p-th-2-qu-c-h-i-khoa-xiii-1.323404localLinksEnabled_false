function renderCaptcha277917() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-277917");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-277917');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-277917" />');
        jQuery("#captcha_image-277917").click(renderCaptcha277917);
    }
}

