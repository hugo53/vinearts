    var validation = {
      rules: {
        comment_text: {
          required: true
        },
        comment_author: {
          required: true
        },
		        comment_email: {
		        required: true,
		        email:true
		        },
		        comment_title: {
		        required: true
		        },
		        captcha_response: {
          required: true
        }
      },
      messages: {
        comment_text: {
          required: "Xin hãy nhập Ý kiến."
        },
        comment_author: {
          required: "Xin hãy nhập Họ và tên."
        },
        comment_title: {
          required: "Xin hãy nhập Tiêu đề."
        },
        captcha_response: {
          required: "Mã xác thực không đúng. Xin hãy nhập lại."
        },
		        comment_email: {
          required: "Bạn chưa nhập email hoặc email không đúng. Xin hãy nhập lại.",
          email: "Bạn chưa nhập email hoặc email không đúng. Xin hãy nhập lại."
        },
        captcha_title: {
          required: "Xin hãy nhập Tiêu đề."
        }
      },
      submitHandler: function(form) {
        jQuery("#submitCommentBlogPost-275516").css("background-color", "#ccc");
        jQuery("#submitCommentBlogPost-275516").attr("disabled", true);
        
        form.submit();
        		alert("Cảm ơn Quý vị đã đóng góp ý kiến về bài viết, chúng tôi đã nhận được ý kiến của Quý vị");
		      }
    };

function renderCaptcha275516() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-275516");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-275516');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-275516" />');
        jQuery("#captcha_image-275516").click(renderCaptcha275516);
    }
}

jQuery().ready(function() { 
            
    
    //jQuery("#captcha_container-275516").click(renderCaptcha275516);
    
    jQuery("#comment_this_article-275516").click(function() {
        firstTimeCaptcha275516();
        jQuery("#comments_container-275516").slideToggle("fast");
        jQuery("#comment_author-275516").focus();
    });
    
});

  jQuery().ready(function() {
    /* "Error management" */  
    var validator = jQuery("#commentBlogPostForm-275516").validate(validation);
  });
  
</script>
