function renderCaptcha275876() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-275876");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-275876');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-275876" />');
        jQuery("#captcha_image-275876").click(renderCaptcha275876);
    }
}

