		      }
    };

function renderCaptcha277693() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-277693");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-277693');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-277693" />');
        jQuery("#captcha_image-277693").click(renderCaptcha277693);
    }
}

jQuery().ready(function() { 
            
    
    //jQuery("#captcha_container-277693").click(renderCaptcha277693);
    
    jQuery("#comment_this_article-277693").click(function() {
        firstTimeCaptcha277693();
        jQuery("#comments_container-277693").slideToggle("fast");
        jQuery("#comment_author-277693").focus();
    });
    
});

  jQuery().ready(function() {
    /* "Error management" */  
    var validator = jQuery("#commentBlogPostForm-277693").validate(validation);
  });
  
</script>
