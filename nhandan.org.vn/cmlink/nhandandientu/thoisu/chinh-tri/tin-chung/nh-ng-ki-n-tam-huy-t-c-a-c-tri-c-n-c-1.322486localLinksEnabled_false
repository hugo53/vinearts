function sendMail(){
$j('.sendMail').sendMail("/cmlink/mail-configuration-17.123?sendMail=init&title=Những ý kiến tâm huyết của cử tri cả nước&url=http://nhandan.org.vn/cmlink/nhandandientu/thoisu/chinh-tri/tin-chung/nh-ng-ki-n-tam-huy-t-c-a-c-tri-c-n-c-1.322486&locale=vi_VN");
