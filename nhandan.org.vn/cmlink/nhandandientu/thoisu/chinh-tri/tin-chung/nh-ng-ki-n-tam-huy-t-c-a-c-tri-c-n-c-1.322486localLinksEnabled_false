function renderCaptcha276847() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-276847");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-276847');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-276847" />');
        jQuery("#captcha_image-276847").click(renderCaptcha276847);
    }
}

