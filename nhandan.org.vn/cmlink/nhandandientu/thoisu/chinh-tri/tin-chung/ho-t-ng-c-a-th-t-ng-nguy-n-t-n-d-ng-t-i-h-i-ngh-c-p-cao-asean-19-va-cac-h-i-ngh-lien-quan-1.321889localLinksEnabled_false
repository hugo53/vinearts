function renderCaptcha276115() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-276115");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-276115');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-276115" />');
        jQuery("#captcha_image-276115").click(renderCaptcha276115);
    }
}

