function renderCaptcha276209() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-276209");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-276209');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-276209" />');
        jQuery("#captcha_image-276209").click(renderCaptcha276209);
    }
}

