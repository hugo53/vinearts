		      }
    };

function renderCaptcha274396() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-274396");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-274396');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-274396" />');
        jQuery("#captcha_image-274396").click(renderCaptcha274396);
    }
}

jQuery().ready(function() { 
            
    
    //jQuery("#captcha_container-274396").click(renderCaptcha274396);
    
    jQuery("#comment_this_article-274396").click(function() {
        firstTimeCaptcha274396();
        jQuery("#comments_container-274396").slideToggle("fast");
        jQuery("#comment_author-274396").focus();
    });
    
});

  jQuery().ready(function() {
    /* "Error management" */  
    var validator = jQuery("#commentBlogPostForm-274396").validate(validation);
  });
  
