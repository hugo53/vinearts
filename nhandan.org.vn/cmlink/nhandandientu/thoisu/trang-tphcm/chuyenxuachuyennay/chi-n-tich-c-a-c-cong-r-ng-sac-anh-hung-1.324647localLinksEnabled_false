function sendMail(){
$j('.sendMail').sendMail("/cmlink/mail-configuration-17.123?sendMail=init&title=Chiến tích của đặc công Rừng Sác Anh hùng&url=http://nhandan.org.vn/cmlink/nhandandientu/thoisu/trang-tphcm/chuyenxuachuyennay/chi-n-tich-c-a-c-cong-r-ng-sac-anh-hung-1.324647&locale=vi_VN");
