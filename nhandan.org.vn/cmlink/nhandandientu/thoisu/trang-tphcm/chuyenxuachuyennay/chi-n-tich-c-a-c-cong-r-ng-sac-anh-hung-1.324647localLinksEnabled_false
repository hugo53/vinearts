function renderCaptcha279377() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-279377");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-279377');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-279377" />');
        jQuery("#captcha_image-279377").click(renderCaptcha279377);
    }
}

