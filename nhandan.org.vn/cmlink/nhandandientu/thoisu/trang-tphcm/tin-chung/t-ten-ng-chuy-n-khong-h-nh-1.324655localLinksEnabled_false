function renderCaptcha279387() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-279387");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-279387');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-279387" />');
        jQuery("#captcha_image-279387").click(renderCaptcha279387);
    }
}

