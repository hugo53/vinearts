		      }
    };

function renderCaptcha277485() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-277485");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-277485');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-277485" />');
        jQuery("#captcha_image-277485").click(renderCaptcha277485);
    }
}

jQuery().ready(function() { 
            
    
    //jQuery("#captcha_container-277485").click(renderCaptcha277485);
    
    jQuery("#comment_this_article-277485").click(function() {
        firstTimeCaptcha277485();
        jQuery("#comments_container-277485").slideToggle("fast");
        jQuery("#comment_author-277485").focus();
    });
    
});

  jQuery().ready(function() {
    /* "Error management" */  
    var validator = jQuery("#commentBlogPostForm-277485").validate(validation);
  });
  
</script>
