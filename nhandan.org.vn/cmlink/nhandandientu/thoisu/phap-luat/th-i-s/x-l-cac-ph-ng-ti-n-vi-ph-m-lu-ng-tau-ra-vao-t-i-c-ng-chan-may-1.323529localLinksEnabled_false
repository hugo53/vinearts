		      }
    };

function renderCaptcha278093() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-278093");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-278093');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-278093" />');
        jQuery("#captcha_image-278093").click(renderCaptcha278093);
    }
}

jQuery().ready(function() { 
            
    
    //jQuery("#captcha_container-278093").click(renderCaptcha278093);
    
    jQuery("#comment_this_article-278093").click(function() {
        firstTimeCaptcha278093();
        jQuery("#comments_container-278093").slideToggle("fast");
        jQuery("#comment_author-278093").focus();
    });
    
});

  jQuery().ready(function() {
    /* "Error management" */  
    var validator = jQuery("#commentBlogPostForm-278093").validate(validation);
  });
  
