        },
        comment_title: {
          required: "Xin hãy nhập Tiêu đề."
        },
        captcha_response: {
          required: "Mã xác thực không đúng. Xin hãy nhập lại."
        },
		        comment_email: {
          required: "Bạn chưa nhập email hoặc email không đúng. Xin hãy nhập lại.",
          email: "Bạn chưa nhập email hoặc email không đúng. Xin hãy nhập lại."
        },
        captcha_title: {
          required: "Xin hãy nhập Tiêu đề."
        }
      },
      submitHandler: function(form) {
        jQuery("#submitCommentBlogPost-275054").css("background-color", "#ccc");
        jQuery("#submitCommentBlogPost-275054").attr("disabled", true);
        
        form.submit();
        		alert("Cảm ơn Quý vị đã đóng góp ý kiến về bài viết, chúng tôi đã nhận được ý kiến của Quý vị");
		      }
    };

function renderCaptcha275054() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-275054");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-275054');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-275054" />');
        jQuery("#captcha_image-275054").click(renderCaptcha275054);
    }
}

jQuery().ready(function() { 
            
    
    //jQuery("#captcha_container-275054").click(renderCaptcha275054);
    
    jQuery("#comment_this_article-275054").click(function() {
        firstTimeCaptcha275054();
        jQuery("#comments_container-275054").slideToggle("fast");
        jQuery("#comment_author-275054").focus();
    });
    
});

  jQuery().ready(function() {
    /* "Error management" */  
    var validator = jQuery("#commentBlogPostForm-275054").validate(validation);
  });
  
