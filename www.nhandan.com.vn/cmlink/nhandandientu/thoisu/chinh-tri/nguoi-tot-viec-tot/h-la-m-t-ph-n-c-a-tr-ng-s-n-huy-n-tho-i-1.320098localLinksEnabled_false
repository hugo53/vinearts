function sendMail(){
$j('.sendMail').sendMail("/cmlink/mail-configuration-17.123?sendMail=init&title=Họ là một phần của Trường Sơn huyền thoại&url=http://www.nhandan.com.vn/cmlink/nhandandientu/thoisu/chinh-tri/nguoi-tot-viec-tot/h-la-m-t-ph-n-c-a-tr-ng-s-n-huy-n-tho-i-1.320098&locale=vi_VN");
