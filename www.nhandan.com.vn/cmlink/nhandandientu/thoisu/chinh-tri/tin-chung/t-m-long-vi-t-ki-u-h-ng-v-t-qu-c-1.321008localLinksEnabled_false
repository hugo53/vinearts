function renderCaptcha275100() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-275100");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-275100');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-275100" />');
        jQuery("#captcha_image-275100").click(renderCaptcha275100);
    }
}

