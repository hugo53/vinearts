          required: "Xin hãy nhập Ý kiến."
        },
        comment_author: {
          required: "Xin hãy nhập Họ và tên."
        },
        comment_title: {
          required: "Xin hãy nhập Tiêu đề."
        },
        captcha_response: {
          required: "Mã xác thực không đúng. Xin hãy nhập lại."
        },
		        comment_email: {
          required: "Bạn chưa nhập email hoặc email không đúng. Xin hãy nhập lại.",
          email: "Bạn chưa nhập email hoặc email không đúng. Xin hãy nhập lại."
        },
        captcha_title: {
          required: "Xin hãy nhập Tiêu đề."
        }
      },
      submitHandler: function(form) {
        jQuery("#submitCommentBlogPost-272163").css("background-color", "#ccc");
        jQuery("#submitCommentBlogPost-272163").attr("disabled", true);
        
        form.submit();
        		alert("Cảm ơn Quý vị đã đóng góp ý kiến về bài viết, chúng tôi đã nhận được ý kiến của Quý vị");
		      }
    };

function renderCaptcha272163() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-272163");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-272163');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-272163" />');
        jQuery("#captcha_image-272163").click(renderCaptcha272163);
    }
}

jQuery().ready(function() { 
            
    
    //jQuery("#captcha_container-272163").click(renderCaptcha272163);
    
    jQuery("#comment_this_article-272163").click(function() {
        firstTimeCaptcha272163();
        jQuery("#comments_container-272163").slideToggle("fast");
        jQuery("#comment_author-272163").focus();
    });
    
});

  jQuery().ready(function() {
    /* "Error management" */  
    var validator = jQuery("#commentBlogPostForm-272163").validate(validation);
  });
  
