    };

function renderCaptcha274374() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-274374");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-274374');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-274374" />');
        jQuery("#captcha_image-274374").click(renderCaptcha274374);
    }
}

jQuery().ready(function() { 
            
    
    //jQuery("#captcha_container-274374").click(renderCaptcha274374);
    
