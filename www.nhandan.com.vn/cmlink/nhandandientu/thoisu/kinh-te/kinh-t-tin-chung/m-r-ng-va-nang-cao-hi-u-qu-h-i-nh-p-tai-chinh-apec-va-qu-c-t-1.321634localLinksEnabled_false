    cache: false
});

var loadlist=1;
            function loadContent7_202536(elementSelector, sourceUrl,count) {
            $(""+elementSelector+"").removeClass();
            loadlist=count;
            var teaserlist = $(""+elementSelector+"");
            teaserlist.animate({'opacity':'0.25'},10);
