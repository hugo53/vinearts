        jQuery("#submitCommentBlogPost-277705").attr("disabled", true);
        
        form.submit();
        		alert("Cảm ơn Quý vị đã đóng góp ý kiến về bài viết, chúng tôi đã nhận được ý kiến của Quý vị");
		      }
    };

function renderCaptcha277705() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-277705");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-277705');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-277705" />');
        jQuery("#captcha_image-277705").click(renderCaptcha277705);
    }
}

jQuery().ready(function() { 
            
    
    //jQuery("#captcha_container-277705").click(renderCaptcha277705);
    
    jQuery("#comment_this_article-277705").click(function() {
        firstTimeCaptcha277705();
        jQuery("#comments_container-277705").slideToggle("fast");
        jQuery("#comment_author-277705").focus();
    });
    
});

  jQuery().ready(function() {
    /* "Error management" */  
    var validator = jQuery("#commentBlogPostForm-277705").validate(validation);
  });
  
</script>
