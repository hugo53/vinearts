    };

function renderCaptcha277787() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-277787");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-277787');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-277787" />');
        jQuery("#captcha_image-277787").click(renderCaptcha277787);
    }
}

jQuery().ready(function() { 
            
    
    //jQuery("#captcha_container-277787").click(renderCaptcha277787);
    
