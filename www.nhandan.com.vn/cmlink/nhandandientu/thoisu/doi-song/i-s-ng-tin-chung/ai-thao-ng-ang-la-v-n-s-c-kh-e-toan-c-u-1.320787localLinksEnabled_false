    };

function renderCaptcha274862() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-274862");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-274862');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-274862" />');
        jQuery("#captcha_image-274862").click(renderCaptcha274862);
    }
}

jQuery().ready(function() { 
            
    
    //jQuery("#captcha_container-274862").click(renderCaptcha274862);
    
