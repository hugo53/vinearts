function renderCaptcha279040() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-279040");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-279040');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-279040" />');
        jQuery("#captcha_image-279040").click(renderCaptcha279040);
    }
}

