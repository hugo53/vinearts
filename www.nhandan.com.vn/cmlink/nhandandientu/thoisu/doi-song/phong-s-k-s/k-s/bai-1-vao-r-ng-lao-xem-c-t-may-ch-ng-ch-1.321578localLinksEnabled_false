function sendMail(){
$j('.sendMail').sendMail("/cmlink/mail-configuration-17.123?sendMail=init&title=Bài 1: Vào rừng Lào xem cắt mây “chứng chỉ”&url=http://www.nhandan.com.vn/cmlink/nhandandientu/thoisu/doi-song/phong-s-k-s/k-s/bai-1-vao-r-ng-lao-xem-c-t-may-ch-ng-ch-1.321578&locale=vi_VN");
