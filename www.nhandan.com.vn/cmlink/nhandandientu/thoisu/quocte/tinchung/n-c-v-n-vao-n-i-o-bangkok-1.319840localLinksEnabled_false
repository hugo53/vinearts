function renderCaptcha273773() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-273773");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-273773');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-273773" />');
        jQuery("#captcha_image-273773").click(renderCaptcha273773);
    }
}

