		      }
    };

function renderCaptcha274528() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-274528");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-274528');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-274528" />');
        jQuery("#captcha_image-274528").click(renderCaptcha274528);
    }
}

jQuery().ready(function() { 
            
    
    //jQuery("#captcha_container-274528").click(renderCaptcha274528);
    
