    };

function renderCaptcha273415() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-273415");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-273415');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-273415" />');
        jQuery("#captcha_image-273415").click(renderCaptcha273415);
    }
}

jQuery().ready(function() { 
            
    
    //jQuery("#captcha_container-273415").click(renderCaptcha273415);
    
    jQuery("#comment_this_article-273415").click(function() {
        firstTimeCaptcha273415();
        jQuery("#comments_container-273415").slideToggle("fast");
        jQuery("#comment_author-273415").focus();
    });
    
});

  jQuery().ready(function() {
    /* "Error management" */  
    var validator = jQuery("#commentBlogPostForm-273415").validate(validation);
  });
  
