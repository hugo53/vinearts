function renderCaptcha276770() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-276770");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-276770');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-276770" />');
        jQuery("#captcha_image-276770").click(renderCaptcha276770);
    }
}

