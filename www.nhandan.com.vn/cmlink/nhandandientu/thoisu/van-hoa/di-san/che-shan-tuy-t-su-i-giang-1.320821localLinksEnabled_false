        firstTimeCaptcha274914();
        jQuery("#comments_container-274914").slideToggle("fast");
        jQuery("#comment_author-274914").focus();
    });
    
});

  jQuery().ready(function() {
    /* "Error management" */  
    var validator = jQuery("#commentBlogPostForm-274914").validate(validation);
  });
  
