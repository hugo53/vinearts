		      }
    };

function renderCaptcha274914() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-274914");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-274914');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-274914" />');
        jQuery("#captcha_image-274914").click(renderCaptcha274914);
    }
}

jQuery().ready(function() { 
            
    
    //jQuery("#captcha_container-274914").click(renderCaptcha274914);
    
