		      }
    };

function renderCaptcha272820() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-272820");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-272820');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-272820" />');
        jQuery("#captcha_image-272820").click(renderCaptcha272820);
    }
}

jQuery().ready(function() { 
            
    
    //jQuery("#captcha_container-272820").click(renderCaptcha272820);
    
    jQuery("#comment_this_article-272820").click(function() {
        firstTimeCaptcha272820();
        jQuery("#comments_container-272820").slideToggle("fast");
        jQuery("#comment_author-272820").focus();
    });
    
});

  jQuery().ready(function() {
    /* "Error management" */  
    var validator = jQuery("#commentBlogPostForm-272820").validate(validation);
  });
  
