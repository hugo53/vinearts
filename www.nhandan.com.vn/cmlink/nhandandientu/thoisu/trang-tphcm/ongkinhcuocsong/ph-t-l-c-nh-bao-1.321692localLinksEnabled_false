function renderCaptcha275929() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-275929");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-275929');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-275929" />');
        jQuery("#captcha_image-275929").click(renderCaptcha275929);
    }
}

