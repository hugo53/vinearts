function renderCaptcha278898() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-278898");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-278898');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-278898" />');
        jQuery("#captcha_image-278898").click(renderCaptcha278898);
    }
