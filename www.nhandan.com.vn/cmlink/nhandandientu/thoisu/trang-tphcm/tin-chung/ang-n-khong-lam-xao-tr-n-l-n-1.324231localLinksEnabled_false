var loadlist=1;
            function loadContent7_245659(elementSelector, sourceUrl,count) {
            $(""+elementSelector+"").removeClass();
            loadlist=count;
            var teaserlist = $(""+elementSelector+"");
            teaserlist.animate({'opacity':'0.25'},10);
            var position = teaserlist.offset();
            var loader = jQuery('<div id="loader" class="loader"></div>');
            loader.appendTo(document.body);
            var el = $('#loader');
            var left = position.left + (teaserlist.width() - el.width()) / 2 + "px";
            var top = position.top + 100 + "px";
            el.css({ position: "absolute",marginLeft: 0, marginTop: 0,top: top, left: left});
            teaserlist.load(sourceUrl, function() {
            $(this).css('opacity','');
            loader.remove();
            
            });
            }

