function renderCaptcha278892() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-278892");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-278892');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-278892" />');
        jQuery("#captcha_image-278892").click(renderCaptcha278892);
    }
}

