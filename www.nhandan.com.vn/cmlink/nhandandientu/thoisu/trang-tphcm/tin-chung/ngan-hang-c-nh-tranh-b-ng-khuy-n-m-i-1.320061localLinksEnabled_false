function renderCaptcha274039() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-274039");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-274039');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-274039" />');
        jQuery("#captcha_image-274039").click(renderCaptcha274039);
    }
}

