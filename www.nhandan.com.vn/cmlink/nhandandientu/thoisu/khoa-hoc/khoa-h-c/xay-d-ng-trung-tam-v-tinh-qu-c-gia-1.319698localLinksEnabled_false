function renderCaptcha273619() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-273619");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-273619');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-273619" />');
        jQuery("#captcha_image-273619").click(renderCaptcha273619);
    }
}

jQuery().ready(function() { 
            
    
