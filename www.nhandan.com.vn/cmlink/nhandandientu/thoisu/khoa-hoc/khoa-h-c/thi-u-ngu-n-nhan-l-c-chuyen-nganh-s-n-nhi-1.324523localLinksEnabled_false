          email: "Bạn chưa nhập email hoặc email không đúng. Xin hãy nhập lại."
        },
        captcha_title: {
          required: "Xin hãy nhập Tiêu đề."
        }
      },
      submitHandler: function(form) {
        jQuery("#submitCommentBlogPost-279259").css("background-color", "#ccc");
        jQuery("#submitCommentBlogPost-279259").attr("disabled", true);
        
        form.submit();
