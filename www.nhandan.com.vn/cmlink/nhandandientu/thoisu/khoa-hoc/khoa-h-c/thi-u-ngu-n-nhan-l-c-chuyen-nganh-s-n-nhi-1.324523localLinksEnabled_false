		      }
    };

function renderCaptcha279259() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-279259");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-279259');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-279259" />');
        jQuery("#captcha_image-279259").click(renderCaptcha279259);
    }
}

jQuery().ready(function() { 
            
    
    //jQuery("#captcha_container-279259").click(renderCaptcha279259);
    
    jQuery("#comment_this_article-279259").click(function() {
        firstTimeCaptcha279259();
        jQuery("#comments_container-279259").slideToggle("fast");
        jQuery("#comment_author-279259").focus();
    });
    
});

  jQuery().ready(function() {
    /* "Error management" */  
    var validator = jQuery("#commentBlogPostForm-279259").validate(validation);
  });
  
