<script type="text/javascript">
    var tickercontent = new Array();
    function make_array(js) {
        var j = 0;
        var i = 1;

        for (j; j < js.articles.length; j++) {
            var strTitle = js.articles[j].title;
            if (strTitle.length > 64) {
                strTitle = strTitle.substr(0, 64) + "...";
            }
            tickercontent[j] = '<a target="_top" href="' + js.articles[j].url + '">' + strTitle + '</a>';
            i++
        }
    }
    var json = null;
    if (json == null)
        json = eval(thanhnt('http://thethao.tuoitre.vn/Ajax/ArticleNews.aspx'))[0];

    make_array(json);

</script>
