					var commentPageCount = 77;
					
					var p = 1;
					
					$(document).ready(function() {
						if (commentPageCount <= 2){
							$("#divCommentTopPaging").hide();
							$("#divOutPaging").hide();
						}
						$('#comment_viewctn').click(function() {
							$("#divLoadingComment").empty().html('<img src="/images/loading_small.gif">');							
							$("#divLoadingComment_Bottom").empty().html('<img src="/images/loading_small.gif">');
							$.ajax({
								url: "/service/comment/showcomment_fb.asp?id=1002164907&ps=0&p=" + p,
								context: document.body,								
								success: function(data){									
									$("#DivShowComment").append(data);									
									$("#comment_p"+p).fadeIn("slow");
									$("#divLoadingComment").empty();
									$("#divLoadingComment_Bottom").empty();
									
									$("#comment_viewctn").empty().html('Xem tiếp');
									$("#divOutPaging").show();
									if((p*20)>commentPageCount){										
										$("#divOutPaging").hide();										
									}
									$("#divCommentTopPaging").hide();
									$("#divLoadingComment").hide();
									
									$("#DivShowCommentShort").hide();
									
									p += 1;									
								}
							});  
						});
						
						$('#comment_viewctn_bottom').click(function() {
							$("#divLoadingComment").empty().html('<img src="/images/loading_small.gif">');							
							$("#divLoadingComment_Bottom").empty().html('<img src="/images/loading_small.gif">');
							$.ajax({
								url: "/service/comment/showcomment_fb.asp?id=1002164907&ps=0&p=" + p,
								context: document.body,								
								success: function(data){									
									$("#DivShowComment").append(data);									
									$("#comment_p"+p).fadeIn("slow");
									$("#divLoadingComment").empty();
									$("#divLoadingComment_Bottom").empty();
									
									$("#comment_viewctn").empty().html('Xem tiếp');
									$("#divOutPaging").show();
									if((p*20)>commentPageCount){										
										$("#divOutPaging").hide();										
									}
									$("#divCommentTopPaging").hide();
									$("#divLoadingComment").hide();
									
									$("#DivShowCommentShort").hide();
									
									p += 1;									
								}
							});  
						});
					});										
				</script>
				<script type="text/javascript" language="javascript">
					function OrderComment(i){
						setCookie('VOrderComment', '', '', i);
						location.href = '/gl/kinh-doanh/bat-dong-san/2011/12/chu-dau-tu-keangnam-tran-tinh-ve-muc-phi-khung/#aComment';	
						location.reload();
					}									
				</script>
				
