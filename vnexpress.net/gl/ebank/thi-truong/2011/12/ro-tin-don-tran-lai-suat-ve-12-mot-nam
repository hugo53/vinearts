							$('#divCommentTopPaging').hide();
						});
						$('#comment_viewctn').click(function(){
							$('#divCommentTopPaging').hide();
							$('#cboOrder').val(1);
							setCookie('VOrderComment', '', '', 1);		
							loadComment();
						});
					}
				});				

				function loadComment(){					
					$("#divLoadingComment").empty().html('<img src="/images/ebank/comment/loading_small.gif">');							
					$("#divLoadingComment_Bottom").empty().html('<img src="/images/ebank/comment/loading_small.gif">');
						
					$.ajax({
						url: '/library/common/include/showcomment.asp?id=1002163968&ps=0&p=' + p + '&o=' + $('#cboOrder').val(),
						context: document.body,								
						success: function(data){								
							$('#DivShowComment').append(data).show();									
							$('#comment_p' + p).fadeIn('slow');
							$('#divLoadingComment, #divLoadingComment_Bottom').empty();		
							$('#divOutPaging').show();
							
							if(p*ps>=commentPageCount)
								$('#divCommentBottomPaging').hide();
								
							$("#DivShowCommentShort").hide();
							p += 1;		
						}
					});  
				}
				
				function loadOrder(){					
					$("#divLoadingComment").empty().html('<img src="/images/ebank/comment/loading_small.gif">');							
					$("#divLoadingComment_Bottom").empty().html('<img src="/images/ebank/comment/loading_small.gif">');
					
					var iOrder = parseInt($('#cboOrder').val());
					var sOrder = (iOrder == 0 ? 'odesc' : 'oasc');
					
					$('#DivShowComment').hide().empty();
					$('#DivShowCommentShort #odesc, #DivShowCommentShort #oasc').hide();
					$('#DivShowCommentShort').show();
					
					if ($('#' + sOrder).length > 0){
						$('#' + sOrder).fadeIn('slow', function(){
							$('#divLoadingComment, #divLoadingComment_Bottom').empty();			
						});
					}
					else{
						$.ajax({
							url: '/library/common/include/showcomment.asp?id=1002163968&ps=0&p=1&o=' + iOrder + '&s=2&t=0',
							context: document.body,								
							success: function(data){																
								$('#DivShowCommentShort').append(data);
								$('#' + sOrder).fadeIn('slow', function(){
									$('#divLoadingComment, #divLoadingComment_Bottom').empty();									
								});								
							}
						});  
					}
					
					if(commentPageCount <= 2)
						$('#divCommentTopPaging, #divOutPaging').hide();
					else{								
						if(iOrder == 0)
							$('#comment_viewctn').show();
						else{
							$('#comment_viewctn').hide();
						}
						
						$('#divCommentTopPaging, #divOutPaging, #divCommentBottomPaging').show();						
					}
				}
				
				function OrderComment(i){
					p = 1;
					setCookie('VOrderComment', '', '', i);
					loadOrder();
				}									
			</script>

