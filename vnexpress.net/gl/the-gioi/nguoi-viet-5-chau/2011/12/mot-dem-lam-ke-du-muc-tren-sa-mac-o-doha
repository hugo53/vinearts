						<input type="hidden" name="txtT" id="txtT" value="1002165219" />
						<input type="hidden" name="txtS" id="txtS" value="0" />
						<input type="hidden" name="txtF" id="txtF" value="130" />
						<input type="hidden" name="txtL" id="txtL" value="/gl/the-gioi/nguoi-viet-5-chau/2011/12/mot-dem-lam-ke-du-muc-tren-sa-mac-o-doha/" />
					</div>
