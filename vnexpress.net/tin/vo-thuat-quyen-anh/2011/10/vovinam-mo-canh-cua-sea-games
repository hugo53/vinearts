	<script>
	writeSociable('http://seagames.vnexpress.net/tin/vo-thuat-quyen-anh/2011/10/vovinam-mo-canh-cua-sea-games/','Vovinam+mở+cánh+cửa+SEA+Games','Vovinam+mở+cánh+cửa+SEA+Games','sociable',1000541434);
