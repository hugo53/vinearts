<script type="text/javascript" language="javascript">
    function SetSelectedTab()
    {
        var currentId = GetPostVariable("ChannelID", -1);
        Items = new Array("mnu_0", "mnu_430", "mnu_530", "mnu_67", "mnu_65", "mnu_297", "mnu_66", "mnu_538", "mnu_8", "mnu_9");
        var url = window.location.href;
        if (url.toString().toLowerCase().match(/nss/)) 
        {
            try {
                Set_Level1_Selected("mnu_0");
                document.getElementById("menu_child").innerHTML = document.getElementById("mnu_0_child").innerHTML;
            }
            catch (err) { }
        }
        else if (url.toString().toLowerCase().match(/dien-thoai/)) 
        {
            {
                Set_Level1_Selected("mnu_430");                
                document.getElementById("menu_child").innerHTML = document.getElementById("mnu_430_child").innerHTML;
            }
           
        }
        else if (url.toString().toLowerCase().match(/thiet-bi-so/)) {
            try {
                Set_Level1_Selected("mnu_9");
                document.getElementById("menu_child").innerHTML = document.getElementById("mnu_530_child").innerHTML;
            }
            catch (err) { }
        }
        else if (url.toString().toLowerCase().match(/thu-thuat/)) {
            try {
                Set_Level1_Selected("mnu_67");
                document.getElementById("menu_child").innerHTML = document.getElementById("mnu_67_child").innerHTML;
            }
            catch (err) { }
        }
        else if (url.toString().toLowerCase().match(/bao-mat/)) {
            try {
                Set_Level1_Selected("mnu_65");
                document.getElementById("menu_child").innerHTML = document.getElementById("mnu_65_child").innerHTML;
            }
            catch (err) { }
        }
        else if (url.toString().toLowerCase().match(/nhip-cau/)) {
            try {
                Set_Level1_Selected("mnu_297");
                document.getElementById("menu_child").innerHTML = document.getElementById("mnu_297_child").innerHTML;
            }
            catch (err) { }
        }
        else if (url.toString().toLowerCase().match(/the-gioi-game/)) {
            try {
                Set_Level1_Selected("mnu_66");
                document.getElementById("menu_child").innerHTML = document.getElementById("mnu_66_child").innerHTML;
            }
            catch (err) { }
        }
        else if (url.toString().toLowerCase().match(/kien-thuc/)) {
            try {
                Set_Level1_Selected("mnu_538");
                document.getElementById("menu_child").innerHTML = document.getElementById("mnu_538_child").innerHTML;
            }
            catch (err) { }
        }
        else if (url.toString().toLowerCase().match(/thiep-online/)) {
            try {
                Set_Level1_Selected("mnu_8");
                document.getElementById("menu_child").innerHTML = document.getElementById("mnu_8_child").innerHTML;
            }
            catch (err) { }
        }
        else if (url.toString().toLowerCase().match(/sieu-this-so/)) {
            try {
                Set_Level1_Selected("mnu_9");
                document.getElementById("menu_child").innerHTML = document.getElementById("mnu_9_child").innerHTML;
            }
            catch (err) { }
        }
        else {
            Set_Level1_Selected("mnu_0");
            document.getElementById("menu_child").innerHTML = document.getElementById("mnu_0_child").innerHTML;
        }
    }
