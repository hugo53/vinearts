<div style="width:248px;background-image:url(http://nhipsongso.tuoitre.vn/Images/rptbgSearch.jpg);background-repeat:repeat-x;height:39px;float:left;">
    <div style="width:100%;clear:both;height:8px;overflow:hidden;font-size:1px;"></div>    
    <div style="width:225px;float:left;height:20px;background-image:url(http://nhipsongso.tuoitre.vn/Images/bg_textsearch.jpg);background-repeat:no-repeat;">
        <div style="width:164px;float:left;height:20px;">
             <input id="txtKeyword" type="text" class="textbox-css" value="Tìm trên Tuổi Trẻ Online" 
            onblur="if (this.value=='') this.value='Tìm trên Tuổi Trẻ Online';" 
