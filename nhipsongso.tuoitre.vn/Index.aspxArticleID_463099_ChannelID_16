<script language="javascript" type="text/javascript">
function setHomepage()
{
    if (document.all)
    {
        document.body.style.behavior='url(#default#homepage)';
        document.body.setHomePage('http://www.nhipsongso.tuoitre.com.vn');

    }
    else if (window.sidebar)
    {
        if(window.netscape)
        {
            try
            {
                netscape.security.PrivilegeManager.enablePrivilege("UniversalXPConnect");
            }
            catch(e)
            {
                
            }
        }
        var prefs = WebParts.classes['@mozilla.org/preferences-service;1'].getService(WebParts. interfaces.nsIPrefBranch);
        prefs.setCharPref('browser.startup.homepage','http://www.nhipsongso.tuoitre.com.vn');
    }
}
</script>


