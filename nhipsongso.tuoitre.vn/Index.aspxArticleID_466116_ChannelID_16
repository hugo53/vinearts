    function ReturnSelectedTab() {
        Set_Level1_Normal(TabHovered.id);
        SetSelectedTab();
    }

    function TimerSelectedTab() {
        SelectedTimerId = setTimeout("ReturnSelectedTab()", 1000);
    }
    
