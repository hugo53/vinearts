} 
catch(e) 
{ 
alert("Trình duyệt Mozilla Firefox không hỗ trợ tính năng này"); 
} 
} 
var prefs = Components.classes['@mozilla.org/preferences-service;1'].getService(Components. interfaces.nsIPrefBranch); 
prefs.setCharPref('browser.startup.homepage','http://www.daidoanket.vn'); 
} 
} 
