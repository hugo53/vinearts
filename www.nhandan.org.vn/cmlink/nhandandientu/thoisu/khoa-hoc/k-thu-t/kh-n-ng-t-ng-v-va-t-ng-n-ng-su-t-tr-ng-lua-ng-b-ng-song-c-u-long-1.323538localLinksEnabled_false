function renderCaptcha278103() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-278103");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-278103');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-278103" />');
        jQuery("#captcha_image-278103").click(renderCaptcha278103);
    }
}

