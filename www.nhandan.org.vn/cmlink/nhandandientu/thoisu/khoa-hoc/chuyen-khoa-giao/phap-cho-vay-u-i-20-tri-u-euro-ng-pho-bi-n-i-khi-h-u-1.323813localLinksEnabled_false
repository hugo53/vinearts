function renderCaptcha278388() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-278388");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-278388');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-278388" />');
        jQuery("#captcha_image-278388").click(renderCaptcha278388);
    }
}

