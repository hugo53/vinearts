function sendMail(){
$j('.sendMail').sendMail("/cmlink/mail-configuration-17.123?sendMail=init&title=Pháp cho vay ưu đãi 20 triệu euro ứng phó biến đổi khí hậu&url=http://www.nhandan.org.vn/cmlink/nhandandientu/thoisu/khoa-hoc/chuyen-khoa-giao/phap-cho-vay-u-i-20-tri-u-euro-ng-pho-bi-n-i-khi-h-u-1.323813&locale=vi_VN");
