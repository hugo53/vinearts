		      }
    };

function renderCaptcha278546() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-278546");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-278546');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-278546" />');
        jQuery("#captcha_image-278546").click(renderCaptcha278546);
    }
}

jQuery().ready(function() { 
            
    
    //jQuery("#captcha_container-278546").click(renderCaptcha278546);
    
    jQuery("#comment_this_article-278546").click(function() {
        firstTimeCaptcha278546();
        jQuery("#comments_container-278546").slideToggle("fast");
        jQuery("#comment_author-278546").focus();
    });
    
});

