function renderCaptcha274894() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-274894");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-274894');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-274894" />');
        jQuery("#captcha_image-274894").click(renderCaptcha274894);
    }
}

