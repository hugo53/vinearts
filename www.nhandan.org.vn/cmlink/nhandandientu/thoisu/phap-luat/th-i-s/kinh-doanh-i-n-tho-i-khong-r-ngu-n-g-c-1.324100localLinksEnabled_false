          email: "Bạn chưa nhập email hoặc email không đúng. Xin hãy nhập lại."
        },
        captcha_title: {
          required: "Xin hãy nhập Tiêu đề."
        }
      },
      submitHandler: function(form) {
        jQuery("#submitCommentBlogPost-278736").css("background-color", "#ccc");
        jQuery("#submitCommentBlogPost-278736").attr("disabled", true);
        
        form.submit();
        		alert("Cảm ơn Quý vị đã đóng góp ý kiến về bài viết, chúng tôi đã nhận được ý kiến của Quý vị");
		      }
    };

function renderCaptcha278736() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-278736");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-278736');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-278736" />');
        jQuery("#captcha_image-278736").click(renderCaptcha278736);
    }
}

jQuery().ready(function() { 
            
    
    //jQuery("#captcha_container-278736").click(renderCaptcha278736);
    
    jQuery("#comment_this_article-278736").click(function() {
        firstTimeCaptcha278736();
        jQuery("#comments_container-278736").slideToggle("fast");
        jQuery("#comment_author-278736").focus();
    });
    
});

  jQuery().ready(function() {
    /* "Error management" */  
    var validator = jQuery("#commentBlogPostForm-278736").validate(validation);
  });
  
</script>
