function renderCaptcha275554() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-275554");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-275554');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-275554" />');
        jQuery("#captcha_image-275554").click(renderCaptcha275554);
    }
}

