		      }
    };

function renderCaptcha272715() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-272715");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-272715');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-272715" />');
        jQuery("#captcha_image-272715").click(renderCaptcha272715);
    }
}

jQuery().ready(function() { 
            
    
    //jQuery("#captcha_container-272715").click(renderCaptcha272715);
    
    jQuery("#comment_this_article-272715").click(function() {
        firstTimeCaptcha272715();
        jQuery("#comments_container-272715").slideToggle("fast");
        jQuery("#comment_author-272715").focus();
    });
    
});

  jQuery().ready(function() {
    /* "Error management" */  
    var validator = jQuery("#commentBlogPostForm-272715").validate(validation);
  });
  
