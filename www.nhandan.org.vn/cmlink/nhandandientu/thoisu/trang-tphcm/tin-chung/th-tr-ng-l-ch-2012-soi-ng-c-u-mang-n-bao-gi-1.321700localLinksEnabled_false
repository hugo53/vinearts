		      }
    };

function renderCaptcha275941() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-275941");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-275941');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-275941" />');
        jQuery("#captcha_image-275941").click(renderCaptcha275941);
    }
}

jQuery().ready(function() { 
            
    
    //jQuery("#captcha_container-275941").click(renderCaptcha275941);
    
    jQuery("#comment_this_article-275941").click(function() {
        firstTimeCaptcha275941();
        jQuery("#comments_container-275941").slideToggle("fast");
        jQuery("#comment_author-275941").focus();
    });
    
});

  jQuery().ready(function() {
    /* "Error management" */  
    var validator = jQuery("#commentBlogPostForm-275941").validate(validation);
  });
  
