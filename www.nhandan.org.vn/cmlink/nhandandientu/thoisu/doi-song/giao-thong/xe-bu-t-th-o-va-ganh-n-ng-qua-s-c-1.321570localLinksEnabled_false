function renderCaptcha275774() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-275774");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-275774');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-275774" />');
        jQuery("#captcha_image-275774").click(renderCaptcha275774);
    }
}

jQuery().ready(function() { 
            
    
