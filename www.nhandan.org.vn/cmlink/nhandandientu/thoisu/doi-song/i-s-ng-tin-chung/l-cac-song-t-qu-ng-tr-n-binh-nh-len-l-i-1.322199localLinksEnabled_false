		      }
    };

function renderCaptcha276486() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-276486");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-276486');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-276486" />');
        jQuery("#captcha_image-276486").click(renderCaptcha276486);
    }
}

jQuery().ready(function() { 
            
    
    //jQuery("#captcha_container-276486").click(renderCaptcha276486);
    
    jQuery("#comment_this_article-276486").click(function() {
        firstTimeCaptcha276486();
        jQuery("#comments_container-276486").slideToggle("fast");
        jQuery("#comment_author-276486").focus();
    });
    
});

  jQuery().ready(function() {
    /* "Error management" */  
    var validator = jQuery("#commentBlogPostForm-276486").validate(validation);
  });
  
