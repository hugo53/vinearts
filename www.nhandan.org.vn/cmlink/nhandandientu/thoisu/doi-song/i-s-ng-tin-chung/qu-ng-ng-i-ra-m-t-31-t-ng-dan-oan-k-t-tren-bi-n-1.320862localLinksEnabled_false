function renderCaptcha274946() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-274946");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-274946');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-274946" />');
        jQuery("#captcha_image-274946").click(renderCaptcha274946);
    }
}

