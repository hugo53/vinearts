		      }
    };

function renderCaptcha275720() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-275720");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-275720');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-275720" />');
        jQuery("#captcha_image-275720").click(renderCaptcha275720);
    }
}

jQuery().ready(function() { 
            
    
    //jQuery("#captcha_container-275720").click(renderCaptcha275720);
    
    jQuery("#comment_this_article-275720").click(function() {
        firstTimeCaptcha275720();
        jQuery("#comments_container-275720").slideToggle("fast");
        jQuery("#comment_author-275720").focus();
    });
    
});

  jQuery().ready(function() {
    /* "Error management" */  
    var validator = jQuery("#commentBlogPostForm-275720").validate(validation);
  });
  
