function renderCaptcha274318() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-274318");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-274318');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-274318" />');
        jQuery("#captcha_image-274318").click(renderCaptcha274318);
    }
}

jQuery().ready(function() { 
            
    
    //jQuery("#captcha_container-274318").click(renderCaptcha274318);
    
    jQuery("#comment_this_article-274318").click(function() {
        firstTimeCaptcha274318();
        jQuery("#comments_container-274318").slideToggle("fast");
        jQuery("#comment_author-274318").focus();
    });
    
});

  jQuery().ready(function() {
    /* "Error management" */  
    var validator = jQuery("#commentBlogPostForm-274318").validate(validation);
  });
  
</script>
