    };

function renderCaptcha273909() {
     var randNum = Math.ceil(Math.random()*10000000);
     var captchaImg = jQuery("#captcha_image-273909");
     if (captchaImg.length > 0) {
        captchaImg.attr("src","/captcha?" + randNum); 
     } else {
        var captcha = jQuery('#captcha_container-273909');
        captcha.html('<img src="/captcha?' +randNum +'" class="captcha_img" id="captcha_image-273909" />');
        jQuery("#captcha_image-273909").click(renderCaptcha273909);
    }
}

