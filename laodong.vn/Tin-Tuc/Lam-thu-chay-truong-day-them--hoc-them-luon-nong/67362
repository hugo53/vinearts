            var txtcaptcha = document.getElementById('captcha').value;
            var txtComment = document.getElementById('txtComment').value;

            if (txtHoTen.length == 0 || txtHoTen == " Nhập họ và tên" || trim(txtHoTen) == 0) {
                alert('Xin hãy nhập họ tên!');
                document.getElementById('txtHoTen').value = "";
                document.getElementById('txtHoTen').focus();
                return false;
            }

            var emailPat = /^([A-Za-z0-9_\-\.])+\@([A-Za-z0-9_\-\.])+\.([A-Za-z]{2,4})$/;
           
            var emailid = document.getElementById('txtEmail').value;
            var matchArray = emailid.match(emailPat);

            if (emailid.length == 0 || emailid == " Thư điện tử" || trim(emailid) == 0)
            {
                alert("Xin hãy nhập địa chỉ Email !");
                document.getElementById('txtEmail').value = "";
                document.getElementById('txtEmail').focus();
                return false;
            }
            
            if (matchArray == null) {
                alert("Địa chỉ email không hợp lệ !");
                document.getElementById('txtEmail').focus();
                return false;
            }
            
            if(txtTieuDe.length == 0 || txtTieuDe == " Tiêu đề" || trim(txtTieuDe) == 0)
            {
                alert("Xin hãy nhập tiêu đề !");
                document.getElementById('txtTieuDe').value = "";
                document.getElementById('txtTieuDe').focus();
                return false;
            }

            if (txtcaptcha.length == 0 || txtcaptcha == " Mã an toàn" || trim(txtcaptcha) == 0)
            {
                alert("Xin hãy nhập mã an toàn !");
                document.getElementById('captcha').value = "";
                document.getElementById('captcha').focus();
                return false;
            }

            if (txtComment.length == 0 || trim(txtComment) == 0) {
                alert("Xin hãy nhập nội dung !");
                document.getElementById('txtComment').focus();
                return false;
            }
            else {
                if (txtComment.length > 3000) {
                    alert('Tối đa 3000 ký tự !');
                    return false;
                }
            }
            
            return true;
        }
        function Reset() {
            var lblMessage = document.getElementById('lblMessage');
            if (lblMessage != null) {
                document.getElementById('lblMessage').innerHTML = "";
            }
            document.getElementById('txtHoTen').value = " Nhập họ và tên";
            document.getElementById('txtEmail').value = " Thư điện tử";
            document.getElementById('txtTieuDe').value = " Tiêu đề";
            document.getElementById('captcha').value = " Mã an toàn";
            document.getElementById('txtComment').value = "";
        }
        
        $j(document).ready(function() {
            value = $j('#hdmsg').val();
            if (value == "OK") {
                $j('#captcha').focus();
                alert('Ma an toan chua dung !');
            }
        });
    // ]]> -->
    </script>
